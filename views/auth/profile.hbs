<section class="profilebody">

  <img src="/images/logo-branco.png" alt="" class="profile-logo">

  <h1>Profile</h1>
   <button><a href="/auth/profile-edit/{{_id}}">Edit your profile</a> </button>

  <div class="infoprofilebox">
    <div class="userinfo">
      <div class="imgprofile"><img src="{{imageUser}}" alt="profilephoto"></div>
 
      <div class="username">
        <h2>{{username}}</h2><a href="/auth/logout">Logout</a>
        <p>{{about}}</p>
      </div>
    </div>
    <p class="coisinhacolorida">»»»»»»»»»»»»»»»»</p>
  </div>

  <div class="favconfevents">
    <div class="squareevents">
      <h3>Confirmed Events</h3>
      <div class="confirmedevents">
        <br />
        {{#each confirmedEvents}}
        <div class="eventslist"><a href='/event-details/{{_id}}'>{{title}}</a></div>
        {{/each}}
      </div>
    </div>
    <div class="favconfevets2">
      <h3>Favourite Events</h3>
      <div class="favouriteevents">
        {{#each favouriteEvents}}
        <div class="eventslist"><a href='/event-details/{{_id}}'>{{title}}</a></div>
        {{/each}}
      </div>
    </div>
  </div>

