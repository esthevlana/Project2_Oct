<section class="profilebody">
  <h1>Profile</h1>

<div class="infoprofilebox">
<div class="userinfo">
  <div class="imgprofile"><img src="{{imageUser}}" alt="profilephoto"></div>
  <div><h2>{{username}}!</h2></div>

  <a href="/auth/logout">Logout</a>

</div>
</div>

<div class="favconfevents">
<div class="confirmedevents">
  <h3>Confirmed Events</h3>
  <br/>
{{#each confirmedEvents}}
<p>{{title}}</p>
{{/each}}
</div>
<div class="favouriteevents">
  <h3>Favourite Events</h3>
{{#each favouriteEvents}}
<p>{{title}}</p>
{{/each}}
</div>
</div>

