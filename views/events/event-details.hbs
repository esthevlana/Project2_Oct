<h1>{{title}}</h1>
<hr/>
<img src="{{imageUrl}}" alt='ahua'/>
<p>by {{creator}}</p>
<p>Description: {{description}}</p>
<p>Date: {{date}}</p>
<p>Hour: {{hour}}</p>
<p>Price: {{price}}</p>
<a href="/event-edit/{{_id}}">Edit Event</a>

<form action="/event-delete/{{_id}}" method="post">
    <button type="submit">Delete Event</button>
</form>

<hr/>

<h4>Leave a comment</h4>

<form action="/comment/create/{{event._id}}" method="post">

<select name="author">

    {{#each users}} 
        <option value="{{_id}}">{{username}}</option> {{!-- nao Ã© necessario indicar user._id por estar dentro do each users --}}
    {{/each}}

</select>

<label for="content">Comments</label>
<textarea name="content" id="content" cols="30" rows="10"></textarea>
<button type="submit">Create a Comment</button>
</form>

<hr/>

{{#each event.comment}}
    <div>
        <p><span>{{author.username}}</span>: {{comment}}</p>
    </div>
{{/each}}