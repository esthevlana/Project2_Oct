<header>
    <nav></nav>
</header>

<div class="eventdetailspage">


    <div class="fav-share-wanna">
        <div class="topicons">
            <a href="/favourite-event/{{_id}}"><svg xmlns="http://www.w3.org/2000/svg" width="30" height="20"
                    fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                    <path
                        d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z" />
                </svg></a>
            <a href="#"><svg xmlns="http://www.w3.org/2000/svg" width="30" height="20" fill="currentColor"
                    class="bi bi-share" viewBox="0 0 16 16">
                    <path
                        d="M13.5 1a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zM11 2.5a2.5 2.5 0 1 1 .603 1.628l-6.718 3.12a2.499 2.499 0 0 1 0 1.504l6.718 3.12a2.5 2.5 0 1 1-.488.876l-6.718-3.12a2.5 2.5 0 1 1 0-3.256l6.718-3.12A2.5 2.5 0 0 1 11 2.5zm-8.5 4a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zm11 5.5a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3z" />
                </svg></a>
        </div>

        <div>
            <a href="/event-confirm/{{_id}}"><button type="button" class="confirmbutton">WannaGo!</button></a>
        </div>
    </div>

    <div class="eventinfo">


        <img src="{{imageUrl}}" alt='event image' />
        {{!-- <h1>{{title}}</h1> --}}

        <p class="details_description">Description: {{description}}</p>

        <div class="createdby_editdelete">
            <p class="creatorlink">Created by <a href="#">{{creator.username}}</a></p>
            <button class="editdeletebutton"> <a href="/event-edit/{{_id}}">Edit Event</a> </button>
            <button class="editdeletebutton"> <a href="/event-delete/{{_id}}">Delete Event</a> </button>
        </div>


        <hr />


        <div class="eventicons">
            <p>
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor"
                    class="bi bi-calendar" viewBox="0 0 16 16">
                    <path
                        d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z" />
                </svg> Date: {{date}}
            </p>

            <p>
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-clock"
                    viewBox="0 0 16 16">
                    <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z" />
                    <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0z" />
                </svg> Hour: {{hour}}
            </p>

            <p>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                    class="bi bi-ticket-perforated" viewBox="0 0 16 16">
                    <path
                        d="M4 4.85v.9h1v-.9H4Zm7 0v.9h1v-.9h-1Zm-7 1.8v.9h1v-.9H4Zm7 0v.9h1v-.9h-1Zm-7 1.8v.9h1v-.9H4Zm7 0v.9h1v-.9h-1Zm-7 1.8v.9h1v-.9H4Zm7 0v.9h1v-.9h-1Z" />
                    <path
                        d="M1.5 3A1.5 1.5 0 0 0 0 4.5V6a.5.5 0 0 0 .5.5 1.5 1.5 0 1 1 0 3 .5.5 0 0 0-.5.5v1.5A1.5 1.5 0 0 0 1.5 13h13a1.5 1.5 0 0 0 1.5-1.5V10a.5.5 0 0 0-.5-.5 1.5 1.5 0 0 1 0-3A.5.5 0 0 0 16 6V4.5A1.5 1.5 0 0 0 14.5 3h-13ZM1 4.5a.5.5 0 0 1 .5-.5h13a.5.5 0 0 1 .5.5v1.05a2.5 2.5 0 0 0 0 4.9v1.05a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-1.05a2.5 2.5 0 0 0 0-4.9V4.5Z" />
                </svg> Price: {{price}}â‚¬
            </p>

            <p>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-geo-alt"
                    viewBox="0 0 16 16">
                    <path
                        d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z" />
                    <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                </svg> Where: {{city}}
            </p>
        </div>

        <hr />

        <div class="favs-conf_details">
            <div class="num_conf">
                <div class="numeros_details"> {{confirmed.length}}</div>
                <p>ATTENDING</p>
            </div>

            <div class="num_conf">
                <div class="numeros_details"> {{allFavourites.length}}</div>
                <p>FAVOURITES</p>
            </div>
        </div>

        <hr />


        <h4 class="details_h4">Leave a comment</h4>

        <form action="/comments/create/{{_id}}" method="post">

            <label for="content"></label>
            <textarea name="content" id="content" cols="50" rows="10"></textarea>
            <button type="submit" class="create-comment_btn">Create a Comment</button>
        </form>

        <hr />

        {{#each comments}}
        <h4 class="details_h4">Comments</h4>

        <div class="user-comment"> <span><a href="/auth/profile">{{author.username}}</a></span>:</div>
        <br />
        <div class="commentbox">
            {{content}}
        </div>

        <form action="/comment-delete/{{_id}}/{{../_id}}" method="post">
            <button type="submit" class="delete-comment_btn">Delete Comment</button>
        </form>

            {{/each}}
    </div>
</div>